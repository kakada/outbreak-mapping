.location-list{ style: "display: none;" }
  .dropdown
    .page-title
      %div ជ្រើសរើសតំបន់
      .close-location
        %i.fa.fa-close
    .dropdown-options.areas
      .area.selected#00{ data: { total: @summary_report[:total_cases], active: @summary_report[:active_cases], recovered: @summary_report[:recovered_cases], fatal: @summary_report[:death_cases], new_cases: @summary_report[:new_cases], location: @summary_report[:location][:name_km] } }
        .area-name= @summary_report[:location][:name_km]
        .area-total= @summary_report[:total_cases]
      - @reports.each do |report|
        .area{ id: report.location_code, data: { total: report.total_cases, active: active_cases(report), recovered: report.recovered_cases, fatal: report.death_cases, new_cases: report.new_cases, location: report.location.name_km } }
          .area-name= report.location.name_km
          .area-total= report.total_cases