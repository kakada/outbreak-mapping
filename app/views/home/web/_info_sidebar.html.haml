.tabs
  .country.tab
    .page-name
      = @summary_report.location.name_km
    .info-tile
      .title{ title: "Total Confirm Cases" }
        ចំនួនករណីឆ្លងជំងឺ Covid-19 សរុប
      .confirmed
        = @summary_report.total_case
        - if @summary_report.new_case.positive?
          %span.new-case=" (#{@summary_report.new_case} ថ្មី)"
      .bar
      .legend
        .color.ongoing
        .description= t('shared.active_case')
        .total= active_case(@summary_report)

        .color.recovered
        .description= t('shared.recovered_case')
        .total= @summary_report.recovered_case

        .color.fatal
        .description= t('shared.fatal_case')
        .total= @summary_report.death_case
      .title.text-center
        = "(#{@setting.last_updated})"
    .areas
      = render '/home/shared/info_details'

  .region.tab
    #location-name.page-name
      = @summary_report.location.name_km
    .subtitle
    .info-tile{ style: "display: none" }
      .title{ title: "Total Confirm Cases" }
        ចំនួនករណីឆ្លងជំងឺ Covid-19 សរុប
      .confirmed#confirmed-case
        = @summary_report.total_case
        - if @summary_report.new_case.positive?
          %span.new-case=" (#{@summary_report.new_case} ថ្មី)"
      .bar
      .legend
        .color.ongoing
        .description= t('shared.active_cases')
        .total#active-case= "#{active_case(@summary_report)}"

        .color.recovered
        .description= t('shared.recovered_cases')
        .total#recovered-case= @summary_report.recovered_case

        .color.fatal
        .description= t('shared.fatal_case')
        .total#fatal-case= @summary_report.death_case

    .segment-panel
      .info-tile{ style: "display: none" }
        .title{ title: "ព័ត៌មានលម្អិត" }ព័ត៌មានលម្អិត
        #case-detail-info
      = render "/home/shared/video_list"
    .close-region
      %i.fas.fa-caret-left
