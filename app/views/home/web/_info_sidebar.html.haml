.tabs
  .country.tab
    .page-name
      = @summary_report.location.name_km
    .info-tile
      .title{ title: "Total Confirm Cases" }
        ចំនួនករណីឆ្លងជំងឺ Covid-19 សរុប
      .confirmed
        = @summary_report.total_cases
        - if @summary_report.new_cases.positive?
          %span.new-case=" (#{@summary_report.new_cases} ថ្មី)"
      .bar
      .legend
        .color.ongoing
        .description= t('shared.active_case')
        .total= active_cases(@summary_report)

        .color.recovered
        .description= t('shared.recovered_case')
        .total= @summary_report.recovered_cases

        .color.fatal
        .description= t('shared.fatal_case')
        .total= @summary_report.death_cases
      .title.text-center
        = "(#{@setting.last_updated})"
    .areas
      = render '/home/shared/info_details'

  .region.tab
    #location-name.page-name
      = @summary_report.location.name_km
    .subtitle
    .info-tile{ style: "display: none" }
      .title{ title: "Total Confirm Cases" }
        ចំនួនករណីឆ្លងជំងឺ Covid-19 សរុប
      .confirmed#confirmed-case
        = @summary_report.total_cases
        - if @summary_report.new_cases.positive?
          %span.new-case=" (#{@summary_report.new_cases} ថ្មី)"
      .bar
      .legend
        .color.ongoing
        .description= t('shared.active_case')
        .total#active-case= "#{active_cases(@summary_report)}"

        .color.recovered
        .description= t('shared.recovered_case')
        .total#recovered-case= @summary_report.recovered_cases

        .color.fatal
        .description= t('shared.fatal_case')
        .total#fatal-case= @summary_report.death_cases

    .segment-panel
      .info-tile{ style: "display: none" }
        .title{ title: "ព័ត៌មានលម្អិត" }ព័ត៌មានលម្អិត
        #case-detail-info
      = render "/home/shared/video_list"
    .close-region
      %i.fas.fa-caret-left
