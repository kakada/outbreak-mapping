= render "shared/user_nav_bar"

#content
  .w-75.view-center
    .row
      .col-md-12
        %h2.text-center= t('about.title')

    .d-flex.justify-content-center.my-4.mx-auto.introduction
      = t('about.introduction')

    .d-flex.justify-content-center.align-items-center.mt-5.mb-3
      %h5= t('about.data_provided_by')

    .d-flex.justify-content-center.align-items-center.program-logo
      = link_to 'http://cdcmoh.gov.kh/', target: '_blank' do
        = image_tag 'cdc.jpg', class: 'about-logo', alt: 'Communicable Disease Control Department'

    .d-flex.justify-content-center.align-items-center.mt-5.mb-3
      %h5= t('about.implemented_by')

    .d-flex.justify-content-center.align-items-center
      .team-con
        - @teams.each do |team|
          .col-xs-12.col-sm-4.col-md-3.team-col.float-left
            .team-image
              %img.img-responsive.img-circle.img-center{ src: team[:image_url] }
            .team-detail.text-center
              .name= team[:name]
              .divider
              .postion.small= team[:position]
              .social-icon
                %ul.list-inline
                  - team[:socials].each do |social|
                    %li
                      %a{ :href => social[:url], :target => "_blank" }
                        %i{ class: social[:icon_class] }
