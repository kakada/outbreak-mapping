- if @device.device_type == "smartphone" || @device.device_type == "phablet"
  .mobile
    .trigger-menu-wrapper.text-right
      %a.btn{ href: root_path, style: 'padding-right: 20px' }
        %i.fas.fa-chevron-left
        = t('about.back')

    = render "info"

- else
  .desktop
    .content
      .header
        = render "shared/user_nav_bar"

      = render "info"
