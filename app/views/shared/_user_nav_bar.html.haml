.logo-wrapper
  = link_to root_path(display_mode: params[:display_mode]), class: 'd-flex' do
    = image_tag 'cdc.jpg', class: 'rounded-circle flex-grow-1'

.headerButtons.text-center
  %div{'data-toggle' => 'tooltip', title: "សំណួរសួរញឹកញាប់"}
    = link_to faqs_path , class: "text-white" do
      %i.far.fa-question-circle{style: 'font-size: 20px;'}

  %div{'data-toggle' => 'tooltip', title: "Developer Guide"}
    = link_to developer_guides_path, class: "text-white" do
      %i.fas.fa-code

  .dropup.dropright{'data-toggle' => 'tooltip', title: t('shared.share')}
    %a{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
      %i.fas.fa-share-square{style: 'font-size: 18px;'}

    .dropdown-menu.p-0
      = social_share_button_tag(t('shared.share_description'), :url => root_url, desc: t('shared.share_description'))

  %div{'data-toggle' => 'tooltip', title: t('shared.about')}
    = link_to about_path(display_mode: params[:display_mode]) do
      %i.fas.fa-info-circle{style: 'font-size: 20px;'}

  .visitor-wrapper.text-white{ 'data-toggle' => 'tooltip', title: t('shared.number_of_visitor') }
    %div
      %i.fas.fa-eye{style: 'font-size: 18px;'}
    .visitor= number_to_human(Ahoy::Visit.count, :format => '%n%u', :units => { :thousand => 'K' })
