.mobile-header
  .a.logo
  .mobile-menu-button
    %i.fa.fa-bars

.mobile-menu-panel{ style: "display: none;" }
  .overlay
  .mobile-menu.d-flex.flex-column
    %a.close-button
      %i.fa.fa-times
    .menu-options
      = link_to "#", class: "menu-option btn-share" do
        %i.fas.fa-share-square
        %div ចែករំលែក

      = link_to about_path, class: "menu-option" do
        %i.fa.fa-info-circle
        %div អំពីកម្មវិធី

    %small.text-center.pt-2= ENV['LAST_UPDATED_AT']

    .flex-grow-1.d-flex.align-items-end
      .d-flex.w-100
        %small.flex-grow-1
          = "#{t('shared.number_of_visitor')}: #{number_to_human(Ahoy::Visit.count, :format => '%n%u', :units => { :thousand => 'K' })}"

        %small= "#{t('shared.version')}: #{ENV.fetch('APP_VERSION') { 'development' }}"
