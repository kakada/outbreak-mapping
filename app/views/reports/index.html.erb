<div class="mt-3">
  <%= link_to "New reports", new_report_path, class: "btn btn-primary float-right" %>
  <h2>Reports: <b><%= @reports.count %></b></h2>
</div>

<%
  i = 0
  total_cases = 0
  total_cases = 0
  total_new_cases = 0
  total_recovered_cases = 0
  total_new_recovered_case = 0
  total_death_cases = 0
  total_new_death_case = 0
%>

<table class="table">
  <tr>
    <th>#</th>
    <th>Location name</th>
    <th>Total cases</th>
    <th>New cases</th>
    <th>Recovered cases</th>
    <th>New recovered case</th>
    <th>Death cases</th>
    <th>New death case</th>
    <% @cols.each do |field| %>
      <th><%= field %></th>
    <% end %>
  </tr>

  <% @reports.each do |r| %>
    <%
      total_cases += r.total_cases
      total_new_cases += r.new_cases
      total_recovered_cases += r.recovered_cases
      total_new_recovered_case += r.new_recovered_case
      total_death_cases += r.death_cases
      total_new_death_case += r.new_death_case
    %>
    <tr>
      <td><%= i+=1 %></td>
      <td><%= r.location.try(:name_km) %></td>
      <td><%= r.total_cases %></td>
      <td>
        <%if r.new_cases > 0 %>
          <font color='blue'><%= r.new_cases %></font>
        <% else %>
          -
        <% end %>
      </td>
      <td><%= r.recovered_cases %></td>
      <td>
        <%if r.new_recovered_case > 0 %>
          <font color='green'><%= r.new_recovered_case %></font>
        <% else %>
          -
        <% end %>
      </td>
      <td><%= r.death_cases %></td>
      <td>
        <%if r.new_death_case > 0 %>
          <font color='red'><%= r.new_death_case %></font>
        <% else %>
          -
        <% end %>
      </td>
      <% ReportDetail.where(report_id: r.id).each do |rd| %>
        <% @cols.each do |c| %>
          <% if rd.field_name == c %>
            <td><%= rd.field_value %></td>
          <% end %>
        <% end %>
      <% end %>
    </tr>
  <% end %>
  <tr>
    <td colspan=2><h3>Total:</h3></td>
    <td><h3><%= total_cases %></h3></td>
    <td>
      <%if total_new_cases > 0 %>
        <h3><font color='blue'><%= total_new_cases %></font></h3>
      <% else %>
        -
      <% end %>
    </td>
    <td><h3><%= total_recovered_cases %></h3></td>
    <td>
      <%if total_new_recovered_case > 0 %>
        <h3><font color='green'><%= total_new_recovered_case %></font></h3>
      <% else %>
        -
      <% end %>
    </td>
    <td><h3><%= total_death_cases %></h3>
      
    </td>
    <td>
      <%if total_new_death_case > 0 %>
        <h3><font color='red'><%= total_new_death_case %></font></h3>
      <% else %>
        -
      <% end %>
    </td>
  </tr>
</table>
